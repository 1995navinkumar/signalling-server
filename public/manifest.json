{
  "manifest_version": 2,
  "name": "Katcheri",
  "description": "This extension captures the audio on the current tab and streams it to the peers connected in a party",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "identity",
    "identity.email",
    "tabs",
    "storage",
    "tabCapture",
    "activeTab"
  ]
}
{
  "name": "signalling-server",
  "version": "1.0.0",
  "description": "Signalling server for peer party",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "serve" : "nodemon index.js",
    "build-background": "browserify client/background/index.js -t babelify -t browserify-css -t uglifyify | uglifyjs -o public/background.js",
    "build-popup": "browserify client/popup/index.js -t babelify -t browserify-css -t uglifyify | uglifyjs -o public/popup.js",
    "watch-background": "watchify client/background/index.js -t babelify -t browserify-css -o public/background.js -dv",
    "watch-popup": "watchify client/popup/index.js -t babelify -t browserify-css -o public/popup.js -dv",
    "watch": "run-p watch-*",
    "build" : "run-p build-*",
    "test": "riteway -r @babel/register -r @babel/polyfill 'test/**/*-test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1995navinkumar/signalling-server.git"
  },
  "keywords": [
    "signalling",
    "server",
    "peer",
    "party",
    "webrtc"
  ],
  "author": "navinkumar.c harish.v",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/1995navinkumar/signalling-server/issues"
  },
  "homepage": "https://github.com/1995navinkumar/signalling-server#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "rotating-file-stream": "^2.0.1",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.0",
    "ws": "^7.2.0",
    "@babel/polyfill": "^7.8.7",
    "events": "^3.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "nodemon": "^1.19.4",
    "riteway": "^6.1.1",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "browserify-css": "^0.15.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "serve": "^11.1.0",
    "uglify-js": "^3.6.0",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
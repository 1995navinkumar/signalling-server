{
  "manifest_version": 2,
  "name": "Peer Party",
  "description": "This extension captures the audio on the current tab and streams it to the peers connected in a party",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "app/peer-party/index.html"
  },
  "background": {
    "scripts": [
      "app/peer-party/background-scripts/state.js",
      "app/peer-party/background-scripts/utils.js",
      "app/peer-party/background-scripts/dom-interact.js",
      "app/peer-party/background-scripts/rtc.js",
      "app/peer-party/background-scripts/client-socket.js"
    ],
    "persistent": true
  },
  "permissions": [
    "identity",
    "identity.email",
    "tabs",
    "tabCapture",
    "activeTab"
  ]
}